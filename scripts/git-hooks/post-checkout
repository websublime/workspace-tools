#!/usr/bin/env sh
#
# post-checkout hook for workspace (Workspace Tools)
#
# This hook automatically creates a changeset when you create or checkout
# a new feature branch.
#
# What it does:
# 1. Detects if you checked out a branch (not just files)
# 2. Checks if it's a new feature branch (not main/master)
# 3. Checks if changeset already exists
# 4. If not, prompts to create one (or creates with defaults)
#
# Configuration (.workspace.toml):
# [git_hooks]
# enabled = true
# auto_create_on_checkout = true
# prompt_for_changeset = true  # false for silent creation
#
# To disable: Set WORKSPACE_SKIP_HOOKS=1 environment variable
# Example: WORKSPACE_SKIP_HOOKS=1 git checkout -b feature/new

set -e

# Check if hooks are disabled
if [ -n "${WORKSPACE_SKIP_HOOKS}" ]; then
    exit 0
fi

# Hook arguments
PREV_HEAD=$1
NEW_HEAD=$2
BRANCH_CHECKOUT=$3

# Only run for branch checkouts (not file checkouts)
if [ "${BRANCH_CHECKOUT}" = "0" ]; then
    exit 0
fi

# Colors (only if terminal supports it)
if [ -t 1 ]; then
    RED='\033[0;31m'
    GREEN='\033[0;32m'
    YELLOW='\033[1;33m'
    BLUE='\033[0;34m'
    CYAN='\033[0;36m'
    NC='\033[0m'
else
    RED=''
    GREEN=''
    YELLOW=''
    BLUE=''
    CYAN=''
    NC=''
fi

# Get current branch
BRANCH=$(git rev-parse --abbrev-ref HEAD 2>/dev/null)

# Skip if not in a git repository
if [ $? -ne 0 ]; then
    exit 0
fi

# Skip for main/master branches
if [ "${BRANCH}" = "main" ] || [ "${BRANCH}" = "master" ]; then
    exit 0
fi

# Check if workspace is installed
if ! command -v workspace >/dev/null 2>&1; then
    printf "${YELLOW}âš ${NC} workspace not found. Changeset not created.\n" >&2
    printf "${BLUE}â„¹${NC} Install: curl -fsSL https://raw.githubusercontent.com/websublime/workspace-tools/main/scripts/install.sh | sh\n" >&2
    printf "${CYAN}ðŸ’¡${NC} You can create changeset manually: workspace changeset create\n" >&2
    exit 0
fi

# Check if changeset already exists
if workspace changeset show "${BRANCH}" --format quiet >/dev/null 2>&1; then
    # Changeset exists, nothing to do
    exit 0
fi

# Check if this is likely a new branch (very few commits ahead of main)
COMMITS_AHEAD=$(git rev-list --count main..HEAD 2>/dev/null || echo "0")

# Only auto-create for new branches (0-2 commits ahead)
if [ "${COMMITS_AHEAD}" -gt 2 ]; then
    # Probably an old branch, don't auto-create
    exit 0
fi

# Display info
printf "\n${BLUE}ðŸ“ New feature branch detected: ${CYAN}%s${NC}\n" "${BRANCH}" >&2
printf "${BLUE}â„¹${NC}  No changeset found for this branch\n\n" >&2

# Try to use terminal directly for interactive prompts
if [ -e /dev/tty ]; then
    exec < /dev/tty

    # Prompt user to create changeset
    printf "${YELLOW}?${NC} Create changeset now? ${CYAN}[Y/n]${NC} " >&2
    read -r response

    case "${response}" in
        [nN][oO]|[nN])
            printf "${BLUE}â„¹${NC} Skipped. Create later with: ${GREEN}workspace changeset create${NC}\n" >&2
            exit 0
            ;;
        *)
            # Create changeset interactively
            printf "\n" >&2
            workspace changeset create || {
                printf "\n${YELLOW}âš ${NC} Failed to create changeset\n" >&2
                printf "${CYAN}ðŸ’¡${NC} Create manually: ${GREEN}workspace changeset create${NC}\n" >&2
                exit 0
            }
            printf "\n${GREEN}âœ“${NC} Changeset created successfully\n" >&2
            ;;
    esac
else
    # No terminal available (CI/CD, scripts, etc.)
    printf "${BLUE}â„¹${NC}  No terminal available\n" >&2
    printf "${CYAN}ðŸ’¡${NC} Create changeset manually: ${GREEN}workspace changeset create${NC}\n" >&2
fi

exit 0
